# xml

import xml.etree.ElementTree as ET

data = '''

<person>
<name>Jamal</name>
<phone type="init">
  +2348137443466
</phone>
<email hide="yes"/>
</person>'''

tree = ET.fromstring(data)
print('Name:', tree.find('name').text)
print('Attr:', tree.find('email').get('hide'))


input = '''

<stuff>
  <users>
    <user x="5">
       <id>008</id>
       <name>Jay</name>
    </user>
    <user x="6">
       <id>009</id>
       <name>CAP</name>
